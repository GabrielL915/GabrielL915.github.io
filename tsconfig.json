{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["astro/client"],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.astro",
    "src/**/*.ts",
    "uno.config.ts",
    "astro.config.ts"
  ]
}
